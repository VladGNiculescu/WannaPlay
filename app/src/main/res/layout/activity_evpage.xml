<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.moelesterindustries.vlad.wannaplay.evpage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <TextView
            android:id="@+id/nam2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/user2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Username:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/sport2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Sport:"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/play2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text="Players"
                android:textColor="#808080"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_weight="1"
                android:gravity="right" />

            <TextView
                android:id="@+id/numbof"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text=""
                android:textColor="#808080"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_weight="1"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text="Match dates:"
                android:textColor="#808080"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/mediumage2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:maxEms="20"
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"
            android:text="Team age:"
            android:textColor="#808080"
            android:textSize="15dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/post2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text="Postcode:"
                android:textColor="#808080"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text="City:"
                android:textColor="#808080"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/country2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:maxEms="20"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:text="Country:"
                android:textColor="#808080"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/times2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:maxEms="20"
            android:maxLines="2"
            android:singleLine="false"
            android:ellipsize="end"
            android:text="Posted on:"
            android:textColor="#808080"
            android:textSize="15dp"
            android:textStyle="normal"
            android:visibility="visible"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="bottom">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send message"
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:background="#819FF7"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:id="@+id/jo"
            android:layout_weight="1"
            android:background="#819FF7"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</RelativeLayout>
